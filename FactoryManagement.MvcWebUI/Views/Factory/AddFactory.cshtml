@using FactoryManagement.MvcWebUI.Models
@model FactoryAddViewModel
@{
}
<h2>Fabrika Oluştur</h2>
<form asp-controller="Factory" asp-action="AddFactory" method="post">
    <div class="mb-3">
        <label class="form-label">Fabrika Adı</label>
        <input asp-for="Factory.Name" class="form-control">
        @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
        <span asp-validation-for="Factory.Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Fabrika Adresi</label>
        <textarea asp-for="Factory.Location" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Factory.Location"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Fabrika Tanımı</label>
        <textarea asp-for="Factory.Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Factory.Description"></span>
    </div>
    <input asp-for="Factory.FactoryID" type="hidden" />
    <button type="submit" class="btn btn-primary">Oluştur</button>

</form>