@model AppUserEditDto
@{
}
<style>

    .container {
        width: 100%;
        max-width: 1000px;
        align-items: center;
    }
</style>


<div class="container">
    <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2>Hesap Bilgileri</h2>
                <div class="panel-body">
                    <form asp-controller="MyProfile" asp-action="Index" method="post" class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Name" type="text" class="form-control" placeholder="Ad">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Surname" type="text" class="form-control" placeholder="Soyad">
                                <span asp-validation-for="Surname"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Username" type="text" class="form-control" placeholder="Kullanıcı Adı">
                                <span asp-validation-for="Username"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Email" type="email" class="form-control" placeholder="E-Posta Adresi">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Password" class="form-control" placeholder="Şifre">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifreyi Tekrar Giriniz">
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- Button -->
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-offset-3 col-md-12">
                                <input type="submit" class="btn btnc-xs btn-info" value="Güncelle"><i class="icon-hand-right"></i>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
